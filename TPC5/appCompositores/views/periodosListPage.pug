extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 
        span Lista de Periodos
          a.w3-btn.w3-round.w3-grey(href="/periodos/add") +
          a.w3-btn.w3-round.w3-white(href="/compositores") Compositores

    .w3-container
      table.w3-table-all
        tr
          th id
          th Nome
          th Actions
        each periodo in lPeriodos
          tr
            td= periodo.id
            td
              a(href="/periodos/" + periodo.id)= periodo.nome
            td
              span [
              a(href="/periodos/edit/" + periodo.id) Edit
              span ]
              span [
              a(href="/periodos/delete/" + periodo.id) Delete
              span ]
    .footer.w3-container.w3-blue
      h5 Gerado por JoaoGDFaria in #{d}
