extends layout

block content
  .w3-card-4
    header.w3-container.w3-purple
      h2 Compositor Edit Page
    form.w3-container(method="POST")
      fieldset
        legend Metadata
        label Id
        input.w3-input.w3-round(type="text" name="id" value=compositor.id readonly)
        label Nome
        input.w3-input.w3-round(type="text" name="nome" value=compositor.nome)
        label Bio
        input.w3-input.w3-round(type="text" name="bio" value=compositor.bio)       
        label Data de Nascimento
        input.w3-input.w3-round(type="date" name="dataNasc" value=compositor.dataNasc)
        label Data de Obit 
        input.w3-input.w3-round(type="date" name="dataObito" value=compositor.dataObito)
        label Periodo
        input.w3-input.w3-round(type="text" name="periodo" value=compositor.periodo)

      br
      button.w3-btn.w3-purple.w3-mb-2(type="submit") Register

    footer.w3-container.w3-purple
      h5
        span Generated by JoaoGDFaria in #{d} - [
        a(href="/compositores") Return
        span ]
    